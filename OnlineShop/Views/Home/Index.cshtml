@model IEnumerable<OnlineShop.Models.Product>

@{
    ViewData["Title"] = "Каталог";
}

<div class="text-center mb-4">
    <h1 class="display-4">Смартфоны 2025</h1>
    <p>Лучшие новинки цифровой техники</p>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Brand @product.Model" 
                     style="height: 300px; object-fit: contain; padding: 20px;">
                
                <div class="card-body">
                    <h5 class="card-title">@product.Brand @product.Model</h5>
                    <p class="card-text text-success fw-bold fs-4">@product.Price $</p>
                    <p class="card-text">
                        <small class="text-muted">В наличии: @product.Stock шт.</small>
                    </p>
                </div>
                
                <div class="card-footer bg-white border-top-0">
                    @{
                        // Получаем список ID товаров в корзине из ViewBag (безопасно, даже если он пустой)
                        var cartIds = ViewBag.CartProductIds as List<int> ?? new List<int>();
                    }

                    @if (cartIds.Contains(product.Id))
                    {
                        // Если товар уже в корзине - серая кнопка
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary w-100">
                            ✓ Уже в корзине
                        </a>
                    }
                    else
                    {
                        // Если нет - синяя кнопка
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.Id" class="btn btn-primary w-100">
                            В корзину
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>